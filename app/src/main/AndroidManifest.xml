<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.seriium">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.Seriium">
        <activity android:name=".activities.Login"></activity>
        <activity android:name=".activities.Register" />
        <activity android:name=".activities.Home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MySerieDetail" />
        <activity android:name=".activities.Seasons" />
        <activity android:name=".activities.SerieDetail" />
        <activity android:name=".activities.MainActivity" />
    </application>

</manifest>